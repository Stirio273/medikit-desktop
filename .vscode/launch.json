{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Main + renderer",
            "configurations": [
                "Main",
                "Renderer"
            ],
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "name": "Renderer",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "timeout": 30000,
            "sourceMaps": true
        },
        {
            "name": "Main",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "args": [
                "."
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "npm: dev",
            "outputCapture": "std",
            "console": "integratedTerminal"
        }
    ]
}